generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PreRegisteredAttendee {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @unique
  fullName    String?
  email       String?
  sourceRow   String?  // Stored as JSON string
  createdAt   DateTime @default(now())
}

model Registration {
  id                   Int      @id @default(autoincrement())
  phoneNumber          String
  fullName             String
  email                String
  isHackathonParticipant Boolean
  attendeeMode         String   // "sessions_attendee" or "hackathon_participant"
  attendeeType         String?  // "Attendee", "VIP", "Mentor" (nullable)
  titleRole            String?
  companyUniversity    String?
  placeOfResidence     String?
  interestedInSessions String?  // JSON string or comma-separated
  projectTitle         String?
  howDidYouHear        String?
  qrCodeValue          String   @unique
  createdAt            DateTime @default(now())
}
